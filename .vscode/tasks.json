{
  "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "build",
        "command": "clang++",
        "args": [
          "-std=c++17",
          "-g",
          "${workspaceFolder}/MVC/main.cpp",
          "-I${workspaceFolder}/MVC",
          "${workspaceFolder}/MVC/mongoose.c",
          "-L/usr/local/lib",
          "-lcryptopp",
          "-o",
          "${workspaceFolder}/bin/${fileBasenameNoExtension}.bin",
        ],
        "group": {
           "kind": "build",
           "isDefault": true
        }
      }
    ]
}